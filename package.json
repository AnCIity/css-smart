{
    "name": "css-smart",
    "displayName": "CSS Smart",
    "description": "a smart css helper.",
    "version": "0.0.2",
    "engines": {
        "vscode": "^1.54.0"
    },
    "categories": [
        "Language Packs"
    ],
    "activationEvents": [
        "onLanguage:css",
        "onLanguage:less",
        "onLanguage:scss",
        "onLanguage:stylus",
        "onLanguage:typescriptreact",
        "onCommand:css-smart.setGlobalPath",
        "onCommand:css-smart.setGlobalAliasPath"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "css-smart.setGlobalPath",
                "title": "CSS: 设置全局变量文件"
            },
            {
                "command": "css-smart.setGlobalAliasPath",
                "title": "CSS: 设置别名路径文件"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "CSS Smart",
            "properties": {
                "css-smart.globalPath": {
                    "type": "string",
                    "default": "",
                    "description": "全局变量地址"
                },
                "css-smart.globalAliasPath": {
                    "type": "string",
                    "default": "",
                    "description": "别名跳转地址"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "lint": "eslint src --ext ts",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "test": "node ./out/test/runTest.js"
    },
    "publisher": "City",
    "repository": {
        "type": "git",
        "url": "https://github.com/AnCIity/css-smart.git"
    },
    "keywords": [
        "css",
        "vscode"
    ],
    "author": "City",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/AnCIity/css-smart/issues"
    },
    "homepage": "https://github.com/AnCIity/css-smart#readme",
    "devDependencies": {
        "@types/glob": "^7.1.1",
        "@types/mocha": "^7.0.2",
        "@types/node": "^13.11.0",
        "@types/vscode": "^1.54.0",
        "@typescript-eslint/eslint-plugin": "^2.30.0",
        "@typescript-eslint/parser": "^2.30.0",
        "eslint": "^6.8.0",
        "glob": "^7.1.6",
        "mocha": "^7.1.2",
        "typescript": "^3.8.3",
        "vscode-test": "^1.3.0"
    },
    "dependencies": {}
}
